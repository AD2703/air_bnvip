<div>
  <div class="row">
    <div class="col-7">
    <% @houses.each do |house| %>
      <div class="card">
        <%= cl_image_tag house.photos[0].key , alt: "Poster", class:"card-image", height: 300 %>
        <div class="card-body">
          <div class="d-flex justify-content-between">
          <h5 class="card-title"><strong><%=  house.name %> </strong></h5>
          <h4><small> <strong><%=house.price%> </strong>â‚¬ / night </small></h4>
        </div>
          <p class="card-text"><%=  house.description %></p>
          <div class="d-flex justify-content-between">
            <p class="card-text"><small class="text-muted"><%= house.address %> / <%= house.country %></small></p>
            <button type="button" class="btn btn-primary float-right"><%= link_to 'See more', house_path(house) , :class => "button" %></button>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div class="col-5">
      <div id="map"
      style="width: 100%"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

<div class="con">
  <button type="button" class="btn btn-success"><%= link_to "Add a house", new_house_path(@house) , :class => "button" %></button>
</div>
